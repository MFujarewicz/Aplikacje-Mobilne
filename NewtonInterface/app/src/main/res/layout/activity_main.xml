<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#B3E5FC">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none|textMultiLine|text"
            android:ems="10"
            android:id="@+id/inputEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:hint="Enter formula" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="simplify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/simplifyButton" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"/>

            <Button
                    android:text="factor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/factorButton" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"/>
            <Button
                    android:text="derive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/deriveButton" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    android:text="integrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/integrateButton" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"/>
            <Button
                    android:text="find 0's"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/find0Button" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"/>
            <Button
                    android:text="find tangent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/findTangentButton" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="area under curve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/areaUnderCurveButton"
                    android:layout_weight="1"/>

            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="cosine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cosineButton" android:layout_weight="1"/>
            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="sine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sineButton" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="tangent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tangentButton" android:layout_weight="1"/>
            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="arccos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:id="@+id/invertedCosineButton"/>
            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="arcsin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/invertedSineButton"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="arctan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/invertedTangentButton"
                    android:layout_weight="1"/>
            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="absolute value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/absoluteValueButton"
                    android:layout_weight="1"/>
            <Button
                    style="@style/Widget.AppCompat.Button.Small" android:backgroundTint="#64B5F6"
                    android:text="logarithm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/logarithmButton" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/inputEditText"
            android:textSize="24sp" android:textColor="#000000"/>
</android.support.constraint.ConstraintLayout>